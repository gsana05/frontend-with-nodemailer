                        #sugar
                        .quizinfo.text-center.mt-3.text-danger.font-weight-bold 
                    .modal-footer
                    #conclusion
                    button.btn.btn-success.font-weight-bold.mb-3.quizmodelbtn(type='button', data-dismiss='modal') Close
                        
                        #results
